<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.inducesmile.androidbottomnavigationview.DealsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/weatherImage"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/weatherText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Loading Temperature"/>
            <TextView
                android:id="@+id/gpsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="Loading Location"/>

            <ImageButton
                android:id="@+id/refreshbutton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:background="#00FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/round_cached_black_18" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/myPost"
            android:background="#d6eaff"
            android:layout_marginTop="41dp"/>

        <LinearLayout
            android:id="@+id/recommenditem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp">
            <TextView
                android:id="@+id/recommendname"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/recommendimage"
                android:layout_width="93dp"
                android:layout_height="94dp"
                android:layout_gravity="left"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/recommend"/>

                <TextView
                    android:id="@+id/recommendcontent"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:text="TextView"/>
            </LinearLayout>


            <TextView
                android:id="@+id/recommendtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/recommendtempimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="right|center_vertical" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/myPost"
            android:background="#d6eaff"
            android:layout_marginTop="140dp"/>

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="147dp"/>


    </FrameLayout>
</android.support.constraint.ConstraintLayout>